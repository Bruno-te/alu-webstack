global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats timeout 30s
    user haproxy
    group haproxy
    daemon
    maxconn 4096
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    timeout connect 5s
    timeout client  50s
    timeout server  50s

frontend http_front
    bind *:80
    redirect scheme https if !{ ssl_fc }

frontend https_front
    bind *:443 ssl crt /etc/ssl/private/www.top-bruno.tech.pem
    default_backend web_backend

backend web_backend
    balance roundrobin
    option httpchk GET /
    server web-01 <WEB_01_IP>:80 check
    server web-02 <WEB_02_IP>:80 check
